<div id="modalEditCliente" class="modal">
    <div class="modal-content">
        <h4 class="blue-text titleModals">Editar Cliente</h4>

        @using (Html.BeginForm("Update", "Cliente", FormMethod.Post, new { id = "formEditCliente" }))
        {
            <input type="hidden" id="editIdCliente" name="IdCliente" />

            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">person</i>
                    <input type="text" id="NombreEdit" name="Nombre" required>
                    <label for="NombreEdit">Nombre Completo</label>
                </div>

                <div class="input-field col s6">
                    <i class="material-icons prefix">chrome_reader_mode</i>
                    <input type="text" id="DocumentoEdit" name="Documento" required>
                    <label for="DocumentoEdit">Documento de identidad</label>
                </div>

                <div class="input-field col s5">
                    <i class="material-icons prefix">mail</i>
                    <input type="email" id="CorreoEdit" name="Correo">
                    <label for="CorreoEdit">Correo</label>
                </div>

                <div class="input-field col s5">
                    <i class="material-icons prefix">perm_contact_calendar</i>
                    <input type="text" id="TelefonoEdit" name="Telefono">
                    <label for="TelefonoEdit">Teléfono</label>
                </div>

                <div class="input-field col s2">
                    <select id="EstadoEdit" name="Estado">
                        <option value="1">Activo</option>
                        <option value="0">Inactivo</option>
                    </select>
                    <label for="EstadoEdit">Estado</label>
                </div>
            </div>

            <div class="modal-footer">
                <a href="#!" class="modal-close waves-effect red white-text btn-flat">Cancelar</a>
                <button type="submit" class="waves-effect blue white-text btn-flat">Guardar</button>
            </div>
        }
    </div>
</div>